<Window x:Class="APP_QLDC.Change"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APP_QLDC"
        mc:Ignorable="d"
        Title="Change" Height="250" Width="300" WindowStartupLocation="CenterScreen" WindowStyle ="None" AllowsTransparency="True" Background="Transparent">
    <Border Background="#eff2f7" CornerRadius="30" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButunDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Ký Tự:" Grid.Row="1" Margin="20 10 5 0"
                   HorizontalAlignment="Left" Foreground="#121518"
                   VerticalAlignment="Center"/>
            <TextBox x:Name="txtCharacter" Grid.Row="1" Margin="100,10,10,5"
                 BorderBrush="Transparent"/>

            <TextBlock Text="Tên:" Grid.Row="2" Margin="20 10 5 0"
                   HorizontalAlignment="Left" Foreground="#121518"
                   VerticalAlignment="Center"/>
            <TextBox x:Name="txtName" Grid.Row="2" Margin="100,10,10,5"
                 BorderBrush="Transparent"/>

            <TextBlock Text="Số ĐT:" Grid.Row="3" Margin="20 10 5 0"
                   HorizontalAlignment="Left" Foreground="#121518"/>
            <TextBox x:Name="txtSDT" Grid.Row="3" Margin="100,10,10,5"
                 BorderBrush="Transparent"/>

            <TextBlock Text="Số Người Ở:" Grid.Row="4" Margin="20 10 5 0"
                   HorizontalAlignment="Left" Foreground="#121518"/>
            <TextBox x:Name="txtSoNguoiO" Grid.Row="4" Margin="100,10,10,5"
                 BorderBrush="Transparent"/>

            <TextBlock Text="Vị Trí:" Grid.Row="5" Margin="20 10 5 0"
                   HorizontalAlignment="Left" Foreground="#121518"/>
            <TextBox x:Name="txtViTri" Grid.Row="5" Margin="100,10,10,5"
                 BorderBrush="Transparent"/>

            <Border Grid.Row="6" Background="#51a7bf" CornerRadius="10"
                Width="50" Margin="20">
                <Button Content="Lưu"  Click="btnAdd_Click" Margin="10"
                    Width="50" Background="Transparent" Foreground="#ffffff"
                    BorderBrush="Transparent" VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Style="{StaticResource topButton}">
                </Button>

            </Border>
        </Grid>
    </Border>
</Window>
